<Page
    x:Class="BankManagingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BankManagingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="410" Stroke="Black" VerticalAlignment="Top" Width="290" Margin="83,50,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="137,60,0,0" Text="Deposit into accounts" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="102,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontWeight="Normal"><Run Text="Enter account number"/><LineBreak/><Run/></TextBlock>
        <TextBox x:ConnectionId='2' x:Name="txtAccountNum" HorizontalAlignment="Left" Margin="102,107,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" FontFamily="Trebuchet MS"                                        />
        <TextBlock x:ConnectionId='3' x:Name="txtError" HorizontalAlignment="Left" Margin="102,144,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" FontFamily="Trebuchet MS" Height="38"/>
        <TextBlock HorizontalAlignment="Left" Margin="102,187,0,0" Text="Amount" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontWeight="Normal"/>
        <TextBox x:ConnectionId='4' x:Name="txtMoneyInput" HorizontalAlignment="Left" Margin="102,208,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" FontFamily="Trebuchet MS" IsEnabled="False"                                />
        <Button x:ConnectionId='5' x:Name="btnDeposit" Content="Deposit" Margin="102,255,0,0" VerticalAlignment="Top" Width="252" FontFamily="Trebuchet MS"                          IsEnabled="False"/>
        <TextBlock x:ConnectionId='6' x:Name="txtConfirm" HorizontalAlignment="Left" Margin="102,304,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" FontFamily="Trebuchet MS" Height="137"/>

    </Grid>
</Page>

