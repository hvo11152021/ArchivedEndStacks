@model LittlePrinter.Models.Tag

@{
    ViewData["Title"] = "Details";
    var names = (List<string>)ViewData["Names"];
    var values = (List<int>)ViewData["Values"];
}

<h1>Label Details</h1>

<div class="transition_container">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CartonNumber)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CartonNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.BuyerCartonNumber)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.BuyerCartonNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.StylePPJ)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.StylePPJ)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Fab)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Fab)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ColorName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ColorName)
            </dd>
            <dt class="col-sm-4">
                Sizes
            </dt>
            <dd class="col-sm-8">
                @*table for sizes for better view
                results with 0 are filtered*@
                <table class="table table-striped table-bordered table-responsive">
                    <tr>
                        @for (int i = 0; i < values.Count(); i++)
                        {
                            <th>@names.ElementAt(i)</th>
                        }
                    </tr>
                    <tr>
                        @for (int i = 0; i < values.Count(); i++)
                        {
                            <td>@values.ElementAt(i)</td>
                        }
                    </tr>
                </table>
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.TotalQuantity)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.TotalQuantity)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.CartonQuantity)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.CartonQuantity)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.TotalPieces)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.TotalPieces)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.TotalNetWeight)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.TotalNetWeight)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.TotalGrossWeight)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.TotalGrossWeight)
            </dd>
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Dimension)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Dimension)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
        <a href='@ViewData["returnURL"]'>Back to List</a>
    </div>
</div>
