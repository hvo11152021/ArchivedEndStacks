<!--Hy Vo Gia - Weight Conversion Program - Lab 2-->
<Page
    x:Class="Weight_Conversion.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Weight_Conversion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel x:ConnectionId='2' x:Name="pnlBackground" Background="#FF4D5287">
            <TextBlock x:ConnectionId='3' x:Name="txtTitle" HorizontalAlignment="Left" Margin="151,110,0,0" Text="Lab 2 - Weight Conversion" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Width="281" FocusVisualPrimaryBrush="Black" Foreground="White"/>
            <TextBox x:ConnectionId='4' x:Name="txtInput" HorizontalAlignment="Left" Margin="151,150,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="281" Background="White"/>
            <Button x:ConnectionId='5' x:Name="btnConvert" Content="Convert" Margin="151,230,0,0" VerticalAlignment="Top"                          Width="281" Background="#FF3D9ED7" Foreground="White" FontSize="20"/>
            <ComboBox x:ConnectionId='6' x:Name="cboUnit" Margin="151,190,0,0" Width="281" PlaceholderText="Pick a unit"                                             Background="White">
                <x:String>Kilogram</x:String>
                <x:String>Pound</x:String>
            </ComboBox>
            <TextBlock x:ConnectionId='7' x:Name="txtResults" HorizontalAlignment="Left" Margin="151,300,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="69" Width="280" Foreground="White" FontSize="14"/>
        </RelativePanel>
    </Grid>
</Page>

