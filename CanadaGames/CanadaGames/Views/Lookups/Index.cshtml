@{
    ViewData["Title"] = "Lookup Index";
}

<h2>Lookup Values</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <h4 id="Contingents">Contingents</h4>
            @Html.DropDownList("ContingentsID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="Contingents" asp-action="Create">Create</a> |
                <a asp-controller="Contingents" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="Contingents" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 id="Hometowns">Hometowns</h4>
            @Html.DropDownList("HometownsID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="Hometowns" asp-action="Create">Create</a> |
                <a asp-controller="Hometowns" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="Hometowns" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 id="Genders">Genders</h4>
            @Html.DropDownList("GendersID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
            <div>
                <a asp-controller="Genders" asp-action="Create">Create</a> |
                <a asp-controller="Genders" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="Genders" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(".linkClick").click( function (event) {
            event.preventDefault();
            var address = $(this).attr("href");
            var lookup = address.split("/")[1];
            var id = $("#" + lookup + "ID").val();
            var caption = $("#" + lookup).html();
            if (id == null) {
                alert("Error: no value selected from the " + caption + " list!");
            } else {
                window.location.href = address + "/" + id;
            }
        });
    </script>
}