@model CanadaGames.Models.Placement

@{
    ViewData["Title"] = "Delete Placement";
}

<h2>Delete Placement for Athlete: @Model.Athlete.FullName</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h4>Placement</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athlete)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Athlete.Affiliation)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href='@ViewData["returnURL"]'>Back to Athlete</a>
    </form>
</div>
