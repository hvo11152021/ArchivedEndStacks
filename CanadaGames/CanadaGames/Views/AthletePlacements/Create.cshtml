@model CanadaGames.Models.Placement

@{
    ViewData["Title"] = "Create Placement";
}

<h2>Create Placement for Athlete: @ViewData["AthleteName"]</h2>
<hr />
<form asp-action="Create">
    <input type="hidden" name="AthleteID" value="@Model.AthleteID" />
    <input type="hidden" name="AthleteName" value="@ViewData[" AthleteName"]" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <textarea asp-for="Comments" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventID" class="control-label"></label>
                <select asp-for="EventID" class="form-control" asp-items="ViewBag.EventID"></select>
            </div>
            <div class="form-group">
                <label asp-for="AthleteID" class="control-label"></label>
                <select asp-for="AthleteID" class="form-control" asp-items="ViewBag.AthleteID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href='@ViewData["returnURL"]'>Back to Athlete</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
