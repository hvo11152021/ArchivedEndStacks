@model HyVo_CanadaGames.Models.Coach

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Coach</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dd class="col-sm-10">
            <table class="table"> <!--Athlete Information Table -->
                <tr>
                    <th>Athlete</th>
                    <th>Age</th>
                    <th>Sport</th>
                </tr>
               @foreach (var athlete in Model.Athletes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => athlete.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => athlete.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => athlete.Sport.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
